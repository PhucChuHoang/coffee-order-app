<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/coffee_type_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Americano"
        android:fontFamily="@font/poppins_medium_500"
        android:textSize="14sp"
        android:textColor="#324A59"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/date_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="24 June | 12:30 PM"
        android:textColor="@color/color_d8d8d8"
        android:fontFamily="@font/poppins_medium_500"
        app:layout_constraintTop_toBottomOf="@id/coffee_type_textview"
        app:layout_constraintStart_toStartOf="@id/coffee_type_textview"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="10sp"/>
    <TextView
        android:id="@+id/point_textview"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:textSize="16sp"
        android:textColor="#324A59"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="+12 Pts"/>
</androidx.constraintlayout.widget.ConstraintLayout>