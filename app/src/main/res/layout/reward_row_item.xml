<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/redeem_image"
        android:layout_width="82dp"
        android:layout_height="61dp"
        android:src="@drawable/coffee1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/reward_name"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="Americano"
        app:layout_constraintStart_toEndOf="@id/redeem_image"
        app:layout_constraintTop_toTopOf="@id/redeem_image"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_medium_500"
        android:textColor="@color/color_324A59"
        android:layout_marginStart="20dp" />
    <Button
        android:id="@+id/redeem_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:backgroundTint="@color/color_324A59"
        android:text="40 pts"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@id/reward_name"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toTopOf="@id/redeem_image"
        android:layout_marginTop="3dp" />

</androidx.constraintlayout.widget.ConstraintLayout>