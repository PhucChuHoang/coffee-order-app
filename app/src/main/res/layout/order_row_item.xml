<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/order_coffee_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/cup_icon"
        android:layout_marginStart="11dp"
        app:layout_constraintTop_toTopOf="@id/cup_icon"
        android:text="Americano"
        android:textSize="10sp"/>

    <TextView
        android:id="@+id/order_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3 Addersion Court Chino Hills, HO56824, United State"
        app:layout_constraintTop_toTopOf="@id/location_icon"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@id/location_icon"
        android:layout_marginStart="9dp"/>

    <TextView
        android:id="@+id/order_price"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:text="$3.00"
        android:fontFamily="@font/poppins_medium_500"
        android:textSize="16sp"
        android:textColor="@color/color_324A59"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/order_date"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:text="24 June | 12:30 PM"
        android:fontFamily="@font/poppins_medium_500"
        android:textColor="@color/color_324A59"
        android:textSize="10sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/order_price"
        android:layout_marginEnd="163dp" />
    
    <ImageView
        android:id="@+id/cup_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cup_icon"
        app:layout_constraintTop_toBottomOf="@id/order_date"
        app:layout_constraintStart_toStartOf="@id/order_date"
        android:layout_marginTop="12dp"
        android:layout_marginStart="2dp"/>

    <ImageView
        android:id="@+id/location_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/location_icon"
        app:layout_constraintTop_toBottomOf="@id/cup_icon"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/order_date"/>
</androidx.constraintlayout.widget.ConstraintLayout>