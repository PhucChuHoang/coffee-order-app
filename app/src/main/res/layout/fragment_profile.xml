<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment"
    android:id="@+id/layout_profile">

    <TextView
        android:id="@+id/profile_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="57dp"
        android:fontFamily="@font/poppins_medium_500"
        android:text="Profile"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_text"
        android:layout_marginTop="32dp">

        <ImageView
            android:id="@+id/circle_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/name_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/full_name"
            android:layout_width="167dp"
            android:layout_height="18dp"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/poppins_medium_500"
            android:text="Full name"
            android:textColor="@color/color_d8d8d8"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@id/circle_name"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edit_name"
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:text="Anderson"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:enabled="false"
            app:layout_constraintStart_toStartOf="@id/full_name"
            app:layout_constraintTop_toBottomOf="@id/full_name" />

        <ImageView
            android:id="@+id/button_edit_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/edit_icon"
            app:layout_constraintStart_toEndOf="@id/circle_name"
            android:layout_marginStart="243dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="9dp" />

        <ImageView
            android:id="@+id/circle_phone_numer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/phone_icon"
            app:layout_constraintTop_toBottomOf="@id/circle_name"
            android:layout_marginTop="26dp"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/phone_number"
            android:layout_width="167dp"
            android:layout_height="18dp"
            android:fontFamily="@font/poppins_medium_500"
            android:text="Phone number"
            android:textColor="@color/color_d8d8d8"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@id/circle_phone_numer"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/full_name"
            android:layout_marginTop="50dp"/>

        <EditText
            android:id="@+id/edit_phone_number"
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:text="+60134589525"
            android:textSize="14sp"
            android:enabled="false"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@id/phone_number"
            app:layout_constraintTop_toBottomOf="@id/phone_number" />

        <ImageView
            android:id="@+id/button_edit_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/edit_icon"
            app:layout_constraintStart_toStartOf="@id/button_edit_name"
            app:layout_constraintTop_toBottomOf="@id/button_edit_name"
            android:layout_marginTop="44dp" />

        <ImageView
            android:id="@+id/circle_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/email_icon"
            app:layout_constraintTop_toBottomOf="@id/circle_phone_numer"
            android:layout_marginTop="26dp"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/email"
            android:layout_width="167dp"
            android:layout_height="18dp"
            android:fontFamily="@font/poppins_medium_500"
            android:text="Email"
            android:textColor="@color/color_d8d8d8"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@id/circle_email"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/phone_number"
            android:layout_marginTop="50dp"/>

        <EditText
            android:id="@+id/edit_email"
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:text="Anderson@email.com"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:enabled="false"
            app:layout_constraintStart_toStartOf="@id/email"
            app:layout_constraintTop_toBottomOf="@id/email" />

        <ImageView
            android:id="@+id/button_edit_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/edit_icon"
            app:layout_constraintStart_toStartOf="@id/button_edit_phone_number"
            app:layout_constraintTop_toBottomOf="@id/button_edit_phone_number"
            android:layout_marginTop="44dp" />

        <ImageView
            android:id="@+id/circle_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/address_icon"
            app:layout_constraintTop_toBottomOf="@id/circle_email"
            android:layout_marginTop="26dp"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/address"
            android:layout_width="167dp"
            android:layout_height="18dp"
            android:fontFamily="@font/poppins_medium_500"
            android:text="Phone number"
            android:textColor="@color/color_d8d8d8"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@id/circle_address"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/email"
            android:layout_marginTop="50dp"/>

        <EditText
            android:id="@+id/edit_address"
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:text="3 Addersion Court Chino Hills, HO56824, United State"
            android:textSize="14sp"
            android:enabled="false"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@id/address"
            app:layout_constraintTop_toBottomOf="@id/address" />

        <ImageView
            android:id="@+id/button_edit_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/edit_icon"
            app:layout_constraintStart_toStartOf="@id/button_edit_email"
            app:layout_constraintTop_toBottomOf="@id/button_edit_email"
            android:layout_marginTop="44dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>