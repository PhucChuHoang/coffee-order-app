<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="327dp"
    android:layout_height="96dp"
    android:background="@drawable/rounded_bottom_nav_view_background">

    <ImageView
        android:id="@+id/image_coffee"
        android:layout_width="82dp"
        android:layout_height="61dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="18dp"
        android:src="@drawable/coffee1"/>
    <TextView
        android:id="@+id/name_coffee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/image_coffee"
        app:layout_constraintStart_toEndOf="@id/image_coffee"
        android:text="Americano"
        android:textSize="12sp"
        android:fontFamily="@font/poppins_medium_500"
        android:textColor="@color/color_001833"
        android:layout_marginStart="11dp" />

    <TextView
        android:id="@+id/coffee_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="single | iced | medium | full ice"
        android:fontFamily="@font/poppins_light_300"
        android:textSize="10sp"
        android:textColor="#757575"
        app:layout_constraintStart_toStartOf="@id/name_coffee"
        app:layout_constraintTop_toBottomOf="@id/name_coffee" />

    <TextView
        android:id="@+id/quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x 1"
        android:fontFamily="@font/poppins_semi_bold_600"
        android:textColor="#757575"
        app:layout_constraintStart_toStartOf="@id/coffee_details"
        app:layout_constraintTop_toBottomOf="@id/coffee_details"/>

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$3.00"
        android:fontFamily="@font/poppins_medium_500"
        android:textColor="@color/color_001833"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="35dp"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>