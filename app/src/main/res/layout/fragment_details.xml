<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsFragment">

    <TextView
        android:id="@+id/text_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="57dp"
        android:fontFamily="@font/poppins_medium_500"
        android:text="Details"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/cart_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="107dp"
        android:layout_marginTop="57dp"
        android:src="@drawable/buy"
        app:layout_constraintStart_toEndOf="@id/text_details"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="110dp"
        android:src="@drawable/back_button"
        app:layout_constraintEnd_toStartOf="@id/text_details"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/details_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="19dp"
        android:scaleType="fitCenter"
        android:background="@drawable/detail_image_background"
        android:src="@drawable/coffee1"
        app:layout_constraintEnd_toEndOf="@id/cart_button"
        app:layout_constraintDimensionRatio="H,2.15:1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/back_button"
        app:layout_constraintTop_toBottomOf="@id/text_details" />
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/details_image"
        app:layout_constraintStart_toStartOf="@id/details_image"
        app:layout_constraintEnd_toEndOf="@id/details_image"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64dp">
            <TextView
                android:layout_width="wrap_content"
                android:fontFamily="@font/poppins_medium_500"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Americano"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/small_rectangle"
                android:padding="4dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <android.widget.Button
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="20dp"
                    android:padding="0dp"
                    app:backgroundTint="@null"
                    android:paddingHorizontal="16dp"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:background="@android:color/transparent"
                    android:text="-"/>
                <android.widget.Button
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="0dp"
                    app:backgroundTint="@null"
                    android:paddingHorizontal="16dp"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:background="@android:color/transparent"
                    android:text="+"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/darker_gray"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_medium_500"
                android:layout_centerVertical="true"
                android:text="Shot"/>
            <android.widget.Button
                android:id="@+id/single_shot_btn"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:padding="0dp"
                android:paddingHorizontal="16dp"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/double_shot_btn"
                android:layout_marginEnd="8dp"
                android:textColor="#001833"
                android:background="@drawable/small_rectangle"
                android:text="Single"/>
            <android.widget.Button
                android:id="@+id/double_shot_btn"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:padding="0dp"
                android:paddingHorizontal="16dp"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:textColor="#001833"
                android:background="@drawable/small_rectangle"
                android:text="Double"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/darker_gray"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_medium_500"
                android:layout_centerVertical="true"
                android:text="Select"/>
            <android.widget.Button
                android:id="@+id/coffee_cup_type"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:padding="0dp"
                android:paddingHorizontal="16dp"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/coffee_plastic_type"
                android:layout_marginEnd="32dp"
                android:textColor="#001833"
                android:backgroundTint="#d8d8d8"
                android:background="@drawable/coffee_cup"/>
            <android.widget.Button
                android:id="@+id/coffee_plastic_type"
                android:layout_width="20dp"
                android:layout_height="34dp"
                android:padding="0dp"
                android:paddingHorizontal="16dp"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:textColor="#001833"
                android:background="@drawable/coffee_plastic"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/darker_gray"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:text="Size"/>
            <android.widget.Button
                android:id="@+id/coffee_size_small"
                android:layout_width="17dp"
                android:layout_height="22dp"
                android:padding="0dp"
                android:paddingHorizontal="16dp"
                android:textSize="12sp"
                android:layout_toLeftOf="@id/coffee_size_medium"
                android:layout_marginEnd="32dp"
                android:layout_alignBottom="@id/coffee_size_large"
                android:textColor="#001833"
                android:backgroundTint="#d8d8d8"
                android:background="@drawable/coffee_size"/>
            <android.widget.Button
                android:id="@+id/coffee_size_medium"
                android:layout_width="24dp"
                android:layout_height="31dp"
                android:padding="0dp"
                android:paddingHorizontal="16dp"
                android:textSize="12sp"
                android:layout_toLeftOf="@id/coffee_size_large"
                android:layout_marginEnd="32dp"
                android:layout_alignBottom="@id/coffee_size_large"
                android:textColor="#001833"
                android:background="@drawable/coffee_size"/>
            <android.widget.Button
                android:id="@+id/coffee_size_large"
                android:layout_width="29dp"
                android:layout_height="38dp"
                android:padding="0dp"
                android:paddingHorizontal="16dp"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:textColor="#001833"
                android:backgroundTint="#d8d8d8"
                android:background="@drawable/coffee_size"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/darker_gray"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_medium_500"
                android:layout_centerVertical="true"
                android:text="Ice"/>
            <android.widget.Button
                android:id="@+id/coffee_ice_small"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:padding="0dp"
                android:paddingHorizontal="16dp"
                android:textSize="12sp"
                android:layout_toLeftOf="@id/coffee_ice_medium"
                android:layout_marginEnd="32dp"
                android:layout_centerVertical="true"
                android:textColor="#001833"
                android:backgroundTint="#d8d8d8"
                android:background="@drawable/coffee_single_ice"/>
            <android.widget.Button
                android:id="@+id/coffee_ice_medium"
                android:layout_width="29dp"
                android:layout_height="20dp"
                android:padding="0dp"
                android:paddingHorizontal="16dp"
                android:textSize="12sp"
                android:layout_toLeftOf="@id/coffee_ice_large"
                android:layout_marginEnd="32dp"
                android:layout_centerVertical="true"
                android:textColor="#001833"
                android:backgroundTint="#d8d8d8"
                android:background="@drawable/coffee_double_ice"/>
            <android.widget.Button
                android:id="@+id/coffee_ice_large"
                android:layout_width="29dp"
                android:layout_height="27dp"
                android:padding="0dp"
                android:paddingHorizontal="16dp"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:textColor="#001833"
                android:background="@drawable/coffee_triple_ice"/>
        </RelativeLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total amount"
        android:textSize="14sp"
        android:textColor="#001833"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/poppins_medium_500"
        app:layout_constraintStart_toStartOf="@id/add_to_cart_btn"
        app:layout_constraintBottom_toTopOf="@id/add_to_cart_btn"/>

    <TextView
        android:id="@+id/total_amount_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$3.00"
        android:textSize="14sp"
        android:textColor="#001833"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/poppins_medium_500"
        app:layout_constraintEnd_toEndOf="@id/add_to_cart_btn"
        app:layout_constraintBottom_toTopOf="@id/add_to_cart_btn"/>

    <android.widget.Button
        android:id="@+id/add_to_cart_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/details_image"
        app:layout_constraintEnd_toEndOf="@id/details_image"
        android:layout_marginBottom="16dp"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_medium_500"
        android:text="Add to cart"
        android:background="@drawable/add_to_card_button_background"/>
</androidx.constraintlayout.widget.ConstraintLayout>