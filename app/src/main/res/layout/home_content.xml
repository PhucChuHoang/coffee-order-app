<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_content_background">
    <TextView
        android:id="@+id/chooseCoffeeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium_500"
        android:textColor="@color/color_d8d8d8"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="31dp"
        android:text="Choose your coffee"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/coffee_type_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="26dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:paddingVertical="22dp"
        android:background="@drawable/coffee_rounded_white_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guidelineCenter"
        app:layout_constraintTop_toBottomOf="@id/chooseCoffeeText">
        <ImageView
            android:layout_width="114dp"
            android:layout_height="85dp"
            android:scaleType="centerCrop"
            android:src="@drawable/coffee1"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Americano"
            android:textAlignment="center"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_medium_500"
            android:textColor="@color/color_001833"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/coffee_type_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="26dp"
        android:paddingVertical="22dp"
        android:background="@drawable/coffee_rounded_white_background"
        app:layout_constraintStart_toStartOf="@id/guidelineCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/coffee_type_1"
        app:layout_constraintBottom_toBottomOf="@id/coffee_type_1">
        <ImageView
            android:layout_width="114dp"
            android:layout_height="85dp"
            android:scaleType="centerCrop"
            android:src="@drawable/coffee2"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Cappuchino"
            android:textAlignment="center"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_medium_500"
            android:textColor="@color/color_001833"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/coffee_type_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="22dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/coffee_rounded_white_background"
        app:layout_constraintStart_toStartOf="@id/coffee_type_1"
        app:layout_constraintEnd_toEndOf="@id/coffee_type_1"
        app:layout_constraintTop_toBottomOf="@id/coffee_type_1">
        <ImageView
            android:layout_width="114dp"
            android:layout_height="85dp"
            android:scaleType="centerCrop"
            android:src="@drawable/coffee3"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Mocha"
            android:textAlignment="center"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_medium_500"
            android:textColor="@color/color_001833"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/coffee_type_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="22dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/coffee_rounded_white_background"
        app:layout_constraintStart_toStartOf="@id/coffee_type_2"
        app:layout_constraintEnd_toEndOf="@id/coffee_type_2"
        app:layout_constraintTop_toBottomOf="@id/coffee_type_2">
        <ImageView
            android:layout_width="114dp"
            android:layout_height="85dp"
            android:scaleType="centerCrop"
            android:src="@drawable/coffee4"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Flat White"
            android:textAlignment="center"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_medium_500"
            android:textColor="@color/color_001833"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>